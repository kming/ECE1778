<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LauncherActivity">

    <Button
        android:id="@+id/load_database_button"
        android:layout_width="@dimen/dialog_fixed_width_major"
        android:layout_height="wrap_content"
        android:text="@string/load_database_string"
        android:layout_centerInParent="true"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/view_database_button"
        android:layout_width="@dimen/dialog_fixed_width_major"
        android:layout_height="wrap_content"
        android:text="@string/view_database_string"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/load_database_button"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/clear_database_button"
        android:layout_width="@dimen/dialog_fixed_width_major"
        android:layout_height="wrap_content"
        android:text="@string/clear_database_string"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/load_database_button"
        android:onClick="onClick"/>

</RelativeLayout>
