<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ece1778.keiming.footprints.UI.AudioRecordActivity">

    <ImageView
        android:id="@+id/audio_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dip"
        android:layout_marginBottom="10dip"
        android:src="@drawable/audio"/>

    <Button
        android:id="@+id/start_record_btn"
        android:layout_below="@id/audio_logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="start recording"
        android:onClick="startStopRecoding"/>

    <Button
        android:id="@+id/playback_btn"
        android:layout_below="@id/start_record_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="play back"
        android:onClick="playbackButton"/>

    <Button
        android:id="@+id/cancel_save_audio_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Cancel"
        android:onClick="cancelSaveAudio"/>

    <Button
        android:id="@+id/save_audio_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cancel_save_audio_btn"
        android:text="Continue"
        android:onClick="continueSavingAudio"/>

</RelativeLayout>
