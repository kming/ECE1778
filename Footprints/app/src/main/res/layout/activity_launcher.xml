<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LauncherActivity">

    <ImageView
        android:id="@+id/launcher_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dip"
        android:layout_marginBottom="10dip"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:id="@+id/launcher_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/launcher_logo"
        android:text="@string/app_name"
        android:layout_marginBottom="30dip"
        android:textSize="@dimen/abc_text_size_title_material"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/display_map_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/display_map_btn_message"
        android:layout_below="@id/launcher_title"
        android:onClick="goToMap"/>

    <TextView
        android:id="@+id/connection_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/display_map_btn"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
